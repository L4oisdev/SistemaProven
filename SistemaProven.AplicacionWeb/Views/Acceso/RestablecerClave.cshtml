@model SistemaProven.AplicacionWeb.Models.ViewModels.VMUsuarioLogin;

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Proven - Restablecer Clave</title>

    <!-- Custom fonts -->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@200;300;400;600;700;900&display=swap" rel="stylesheet">

    <!-- Custom styles -->
    <link href="~/css/sb-admin-2.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Nunito', sans-serif;
            background: linear-gradient(to right, #1cc88a, #4e73df);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

        .bg-password-image {
            background: url('@Url.Content("~/img/comercio.png")') no-repeat center center;
            background-size: cover;
        }

        .btn-primary {
            background-color: #4e73df;
            border-color: #4e73df;
        }

            .btn-primary:hover {
                background-color: #2e59d9;
                border-color: #2653d4;
            }

        .text-gray-900 {
            color: #5a5c69 !important;
        }

        .form-control {
            border-radius: 10px;
        }

        .text-center a {
            color: #4e73df;
        }

            .text-center a:hover {
                color: #2e59d9;
            }
    </style>
</head>

<body>

    <div class="container">
        <div class="card o-hidden border-0 shadow-lg">
            <div class="row no-gutters">
                <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                <div class="col-lg-6">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-2">¿Olvidaste tu contraseña?</h1>
                            <p class="mb-4">Ingrese su correo de sesión y le enviaremos una nueva contraseña</p>
                        </div>
                        <form class="user" asp-controller="Acceso" asp-action="RestablecerClave" method="post">
                            <div class="form-group">
                                <input type="email" class="form-control form-control-user" asp-for="Correo" placeholder="Ingrese su correo">
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="form-group">
                                    <div class="alert alert-success" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            @if (ViewData["MensajeError"] != null)
                            {
                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["MensajeError"]
                                    </div>
                                </div>
                            }
                            <button type="submit" class="btn btn-primary btn-user btn-block">
                                Restablecer Contraseña
                            </button>
                        </form>
                        <hr>
                        <div class="text-center">
                            <a class="small" href="@Url.Action("Login","Acceso")">Iniciar Sesión</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
